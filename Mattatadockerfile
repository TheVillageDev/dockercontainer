FROM resin/rpi-raspbian:latest
  
ENTRYPOINT []

RUN apt-get update && \  
    apt-get -qy install apt-utils && \
    apt-get upgrade && \
    apt-get -qy install git

WORKDIR /srv/bot

RUN git clone https://github.com/TheWildBear/mattata

WORKDIR /srv/bot/mattata/install

RUN sudo ./install-ubuntu.sh

WORKDIR /srv/bot/mattata

RUN chmod +x launch.sh

CMD ["/srv/bot/mattata/launch.sh"]  
